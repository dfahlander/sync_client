  },
  "devDependencies": {
    "babel-core": "6.3.26",
    "babel-loader": "6.2.0",
    "babel-preset-es2015": "6.3.13",
    "body-parser": "1.14.2",
    "cors": "2.7.1",
    "eslint": "1.10.3",
    "express": "4.13.3",
    "isparta": "4.0.0",
    "jasmine-core": "2.4.1",
    "karma": "0.13.16",
    "karma-babel-preprocessor": "6.0.1",
    "karma-chrome-launcher": "0.2.2",
    "karma-commonjs": "0.0.13",
    "karma-coverage": "0.5.3",
    "karma-firefox-launcher": "0.1.7",
    "karma-jasmine": "0.3.6",
    "karma-jasmine-ajax": "0.1.13",
    "webpack": "1.12.9"
  },
  "scripts": {
    "build-dev": "webpack --config webpack.dev.config.js",
    "build-prod": "webpack -p --config webpack.prod.config.js",
    "prepublish": "npm run lint && npm test && npm run build-dev && npm run build-prod",
    "pretest": "npm run build-prod && node ./test/test_server.js start &",
    "test": "npm run test-unit && npm run test-integration; node ./test/test_server.js stop",
    "test-unit": "karma start karma-unit.conf.js",
    "test-integration": "karma start karma-integration.conf.js",
    "lint": "eslint src/** test/** *.js"
  },
  "description": "Module which uses IndexedDB to save data and can later use a server to synchronize the data in the database with other devices",
  "keywords": [
    "IndexedDB",
    "offline",
    "synchronization"
  ]
}
